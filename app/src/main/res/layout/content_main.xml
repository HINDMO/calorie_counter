<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:context=".MainActivity" android:background="@color/colorWhite">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
            <FrameLayout android:id="@+id/mainFrameLayout" android:layout_width="match_parent" android:layout_height="300dp"> </FrameLayout>
            <TextView android:id="@+id/textView1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:gravity="center" android:text="" android:textAllCaps="true" android:textSize="24dp" android:textStyle="bold"/>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <Button android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text=""
                    android:backgroundTint="@color/colorWhite"

                    android:textStyle="bold"
                    android:elevation="8dp"
                    android:translationZ="8dp"/>
                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorWhite"
                    android:text=""
                    android:textStyle="bold"/>
                <Button android:id="@+id/button3"
                    android:backgroundTint="@color/colorWhite"

                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textStyle="bold"/>
            </LinearLayout>
            <TextView android:id="@+id/textView3" android:layout_width="match_parent" android:layout_height="55dp" android:layout_margin="10dp" android:gravity="center" android:text=" " android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>
    <FrameLayout android:id="@+id/fullparentFramelayout" android:layout_width="match_parent" android:layout_height="match_parent"> </FrameLayout>
</android.support.constraint.ConstraintLayout>